# Bitcoin Core 설정 파일 예제
# 이 파일을 bitcoin.conf로 복사하여 사용하세요
# 
# Linux: ~/.bitcoin/bitcoin.conf
# macOS: ~/Library/Application Support/Bitcoin/bitcoin.conf
# Windows: %APPDATA%\Bitcoin\bitcoin.conf

###############################################################################
# 네트워크 설정
###############################################################################

# 네트워크 선택 (하나만 활성화)
# 메인넷 (기본값, 주석 해제 불필요)
# testnet=1
# regtest=1

# P2P 네트워크 포트 (기본: 8333)
port=8333

# 외부 연결 허용
listen=1

# 최대 연결 수
maxconnections=125

# 외부 IP 주소 지정 (선택사항, NAT 환경에서 유용)
# externalip=YOUR_PUBLIC_IP_ADDRESS

###############################################################################
# RPC 설정
###############################################################################

# RPC 서버 활성화 (필수)
server=1

# RPC 바인딩 주소
# 보안을 위해 로컬호스트만 사용 권장
rpcbind=127.0.0.1

# RPC 포트 (기본: 8332)
rpcport=8332

# RPC 인증 정보 (반드시 변경하세요!)
rpcuser=bitcoin
rpcpassword=changeme_secure_password_here

# RPC 허용 IP (보안을 위해 제한하는 것을 권장)
rpcallowip=127.0.0.1
# 특정 네트워크만 허용하려면 아래 주석 해제
# rpcallowip=192.168.1.0/24

###############################################################################
# 성능 최적화
###############################################################################

# 트랜잭션 인덱스 유지 (더 많은 디스크 공간 필요, 약 10GB 추가)
# 트랜잭션 ID로 검색이 필요한 경우 활성화
txindex=1

# 데이터베이스 캐시 크기 (MB)
# 시스템 RAM에 따라 조정 (권장: 전체 RAM의 50-70%)
# 4GB RAM: 2000, 8GB RAM: 4500, 16GB RAM: 8000
dbcache=4500

# 메모리 풀 크기 제한 (MB)
maxmempool=300

# 블록 필터 인덱스 (BIP 157) - 경량 클라이언트 지원
blockfilterindex=1

###############################################################################
# 로그 설정
###############################################################################

# 로그에 타임스탬프 포함
logtimestamps=1

# 로그에 IP 주소 포함
logips=1

# 디버그 로그 레벨 (0=없음, 1=에러, 2=경고, 3=정보, 4=디버그)
# debug=info

###############################################################################
# 데이터 디렉토리
###############################################################################

# 데이터 디렉토리 지정 (선택사항, 기본값 사용 시 주석 처리)
# datadir=/path/to/bitcoin/data

###############################################################################
# 보안 설정
###############################################################################

# 지갑 암호화 (지갑 사용 시)
# encryptwallet=1

# 자동 백업 (지갑 사용 시)
# walletbackups=10

###############################################################################
# 기타 설정
###############################################################################

# 최소 연결 수 (기본: 0)
# minconnections=8

# DNS 시드 노드 사용 (기본: true)
# dnsseed=1

# UPnP 사용 (NAT 환경에서 유용, 보안 고려 필요)
# upnp=1

# 블록 다운로드만 수행 (블록 생성 안 함)
# blocksonly=1

# ZMQ 알림 설정 (선택사항)
# zmqpubrawblock=tcp://127.0.0.1:28332
# zmqpubrawtx=tcp://127.0.0.1:28333

