# Stellar Quickstart Docker 환경 변수 설정

# 네트워크 선택: local, testnet, futurenet, pubnet
# - local: 로컬 개발/테스트 네트워크 (빠른 원장 생성, 1초마다)
# - testnet: Stellar 테스트 네트워크 (개발용)
# - futurenet: 미래 프로토콜 변경 테스트 네트워크
# - pubnet: Stellar 메인넷 (프로덕션, 디스크 공간 많이 필요)
NETWORK=pubnet

# PostgreSQL 비밀번호 (persistent mode에서 필수)
# ⚠️ 보안: 강력한 비밀번호로 변경하세요!
POSTGRES_PASSWORD=firpeng

# 활성화할 서비스 (쉼표로 구분)
# 옵션: core, horizon, rpc, lab, galexie
# 기본값: core,horizon,rpc (모든 주요 서비스)
ENABLE=core,horizon,rpc

# 로그 활성화 (true/false)
# true로 설정하면 모든 서비스 로그가 컨테이너 출력에 표시됨
ENABLE_LOGS=false

# Core 로그 레벨 (선택사항)
# 옵션: FATAL, ERROR, WARNING, INFO, DEBUG, TRACE
# 비워두면 네트워크별 기본값 사용 (local: DEBUG, 기타: INFO)
CORE_LOG_LEVEL=

# Core에서 PostgreSQL 사용 (선택사항)
# true로 설정하면 Core도 PostgreSQL 사용 (기본값: SQLite)
# ⚠️ 주의: 이 기능은 deprecated 될 예정
CORE_USE_POSTGRES=

# 프로토콜 버전 (local 네트워크만)
# 비워두면 이미지의 기본 프로토콜 버전 사용
PROTOCOL_VERSION=

# 리소스 제한 (local 네트워크만)
# 옵션: default (매우 낮음), testnet (테스트넷과 동일), unlimited (최대)
# LIMITS=testnet
