# Stellar Node Docker Environment Variables
# Copy this file to .env and customize the values

# ============================================================================
# Network Configuration
# ============================================================================
# Network mode: public (mainnet) or testnet
# public: Real XLM transactions, full sync required (2-7 days)
# testnet: Development and testing, faster sync (hours)
NETWORK=public

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
# PostgreSQL user
POSTGRES_USER=stellar

# PostgreSQL password (CHANGE THIS!)
POSTGRES_PASSWORD=changeme_strong_password_here

# ============================================================================
# Horizon Configuration
# ============================================================================
# Horizon API port
HORIZON_PORT=8000

# Enable ingestion (data collection from stellar-core)
# Set to false if you only need API access to existing data
INGEST=true

# ============================================================================
# Docker Build Configuration
# ============================================================================
# Git version tag (for build metadata)
GIT_VERSION=latest

# ============================================================================
# Optional: PostgreSQL Tuning
# ============================================================================
# Uncomment and adjust based on your system RAM
# These values are for a system with 16GB RAM
# POSTGRES_SHARED_BUFFERS=4GB
# POSTGRES_EFFECTIVE_CACHE_SIZE=12GB
# POSTGRES_MAINTENANCE_WORK_MEM=1GB
# POSTGRES_WORK_MEM=20MB
